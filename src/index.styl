    .yr {
      transform: translate(0, 0);
      opacity: 1;
    }
  }
  &.hide {
    opacity: 0;
  }
}

#questions {
  display: flex;
  flex-direction: column;
  justify-content: center;
  h2 {
    opacity: 0;
    position: relative;
    padding: 0.25em 0 0.25em 18vw;
    transition: all TRANSITION_DURATION_SHORT TRANSITION_TIMING_CUBIC_OUT;
    &.backend {
      transform: translate(0, 100%);
    }
    &.middleend {
      transform: translate(0, -100%);
    }
    span {
      opacity: 0;
      background-color: PINK;
      right: 10vw;
      position: absolute;
      padding: 0.25em 0.5em;
      top: -0.15em;
      transition: all TRANSITION_DURATION_SHORT TRANSITION_TIMING_CUBIC_OUT;
    }
  }
  &.show {
    opacity: 1;
  }
  &.step-1 {
    .backend {
      opacity: 1;
    }
  }
  &.step-2 {
    .backend .answer {
      opacity: 1;
    }
  }
  &.step-3 {
    .backend {
      transform: translate(0, 0);
    }
    .frontend {
      opacity: 1;
    }
  }
  &.step-4 {
    .frontend .answer {
      opacity: 1;
    }
  }
 &.step-5 {
    .middleend {
      opacity: 1;
      transform: translate(0, 0);
    }
  }
  &.step-6 {
    .middleend .answer {
      opacity: 1;
    }
  }
  &.hide {
    opacity: 0;
  }
}

