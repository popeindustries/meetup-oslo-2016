@import './lib/normalize.css';
@import './lib/fonts.css';

BLACK = #050A07;
YR_BLUE = #00b9f1;
DARK_BLUE = darken(YR_BLUE, 60%);
GREEN = #41d041;
RED = #d21111;
YELLOW = #E8D733;
PINK = #DB1A7E;
RATIO = 16/9;
RATIO_INVERT = 9/16;
TRANSITION_DURATION = 400ms;
TRANSITION_DURATION_SHORT = 200ms;
TRANSITION_DURATION_LONG = 800ms;
TRANSITION_TIMING_CUBIC_OUT = cubic-bezier(0.215, 0.61, 0.355, 1);

full() {
  bottom: 0;
  left: 0;
  position: absolute;
  right: 0;
  top: 0;
}
bg(path) {
  background-image: url(path);
  background-position: bottom center;
  background-size: cover;
}

html,
body {
  width: 100vw;
  height: 200vh;
}
html {
  background-color: BLACK;
}
body {
  color: white;
  font-family: "Avenir Next", sans-serif;
  font-size: 16px;
  font-variant: normal;
  font-weight: 500;
  padding-bottom: 2em;
  overflow: hidden;
  z-index: 0;
}
h1,
h2,
h3,
h4,
h5 {
  line-height: normal;
  margin: 0;
  padding: 0;
}
h1 {
  font-size: 4vw;
  font-weight: 600;
}
h2 {
  font-size: 3vw;
  font-weight: 600;
}
h3 {
  font-size: 2.5vw;
  font-weight: 500;
}
ul {
  margin: 0;
  padding: 0 0 0 0.5vw;
}
li {
  font-size: 2vw;
  list-style-type: none;
  padding: 0.5vw 0;
  &::before {
    display: inline-block;
    font-size: 2vw;
    width: 2vw;
  }
  &.good::before {
    content: '✓';
    color: GREEN;
  }
  &.maybe::before {
    content: '?';
    color: YELLOW;
  }
  &.bad::before {
    content: '✘';
    color: RED;
  }
  ul {
    margin-left: 1em;
  }
}
p {
  font-size: 1.8vw;
}
a {
  color: YELLOW;
  font-size: 1.8vw;
  font-weight: 500;
  text-decoration: none;
}
em {
  color: PINK;
}
section {
  bottom: 0;
  right: 0;
  left: 0;
  opacity: 1;
  position: absolute;
  top: 0;
  transition: all TRANSITION_DURATION TRANSITION_TIMING_CUBIC_OUT;
  visibility: hidden;
  .presentation-notes & > .notes {
    display: block;
  }
  .presentation-notes & > *:not(.notes) {
    display: none;
  }
  &.show {
    visibility: visible;
  }
  &.hide {
    visibility: hidden;
  }
}
pre {
  margin: 0 0 0 -8vh;
  padding: 0;
  width: auto;
  display: flex;
  flex-direction: row;
  justify-content: center;
  code {
    font-family: 'Hack', monospace;
    font-size: 1em;
    padding: 0 !important;
    // overflow: hidden !important;
    background-color: transparent !important;
    width: auto;
  }
}
blockquote {
  font-size: 2vw;
  font-weight: 400;
  line-height: 1.6;
  margin: 0;
  padding: 0 2vw 0 3vw;
  position: relative;
  &:before {
    content: '‟';
    display: inline-block;
    font-size: 300%;
    left: 0;
    position: absolute;
    top: -1.5vw;
  }
}
figcaption {
  font-size: 2vw;
}

.slides {
  background-color: BLACK;
  height: 100%;
  left: 0;
  overflow: hidden;
  position: absolute;
  transform-origin: top left;
  top: 0;
  width: 100%;
}
.clock {
  font-size: 4vw;
  opacity: 0.25;
  position: absolute;
  right: 1vw;
  top: 0.5vw;
  z-index: 100;
}
.notes {
  background-color: white;
  color: white;
  display: none;
  font-size: 4vw;
  font-weight: 400;
  text-align: left;
  z-index: 1000;
  full();
  .dev & {
    background-color: rgba(white, 0.2);
    // display: block;
    top: initial;
  }
  .note {
    font-size: inherit;
    left: 50%;
    margin: 0;
    opacity: 0;
    padding: 0;
    position: absolute;
    top: 50%;
    transform: translate(-50%, -50%);
    visibility: visible;
    width: 80%;
    .dev & {
      background-color: rgba(255,255,255,0.8);
      bottom: 0;
      font-size: 1.8vw;
      left: 0;
      top: initial;
      transform: none;
      padding: 1em;
      width: auto;
    }
  }
}
.function {
  color: #a6e22e;
}

